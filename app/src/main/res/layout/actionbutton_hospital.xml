<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:layout_marginTop="1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="265dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
        android:id="@+id/hospital_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Hospitals"
        android:layout_marginTop="20dp"
        android:textColor="#444444"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/addCoordinator"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/hospital_buttons"
            android:backgroundTint="@color/oceanblue"
            android:drawableStart="@drawable/baseline_person_add_24"
            android:paddingHorizontal="10dp"
            android:text="  Add Coordinator"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <Button
            android:id="@+id/addDoctor"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/hospital_buttons"
            android:backgroundTint="@color/oceanblue"
            android:drawableStart="@drawable/baseline_person_add_24"
            android:paddingHorizontal="10dp"
            android:text="  Add Doctor"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/view"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/hospital_buttons"
            android:backgroundTint="@color/dark_blue"
            android:drawableStart="@drawable/baseline_remove_red_eye_24"
            android:paddingHorizontal="10dp"
            android:text="  View"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/edit"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/hospital_buttons"
            android:backgroundTint="@color/editcolor"
            android:drawableStart="@drawable/baseline_edit_24"
            android:paddingHorizontal="10dp"
            android:text="  Edit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/delete"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/hospital_buttons"
            android:backgroundTint="@color/deletecolor"
            android:drawableStart="@drawable/baseline_delete_24"
            android:paddingHorizontal="10dp"
            android:text="  Delete"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>
    
</LinearLayout>