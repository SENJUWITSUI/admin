<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Services">

    <ScrollView
        android:id="@+id/scrol"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/medicine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="1dp"
                android:text="Telemedicine System"
                android:textColor="#444444"
                android:textSize="27dp" />

            <TextView
                android:id="@+id/services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medicine"
                android:layout_marginStart="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="12dp"
                android:text="Services"
                android:textColor="#003473"
                android:textSize="20dp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/services"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp"
                android:background="#807D7D"
                android:elevation="1dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#EAE9E9"
                android:layout_below="@+id/view1"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <Button
                        android:id="@+id/servicebtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/button1"
                        android:drawableStart="@drawable/baseline_add_24"
                        android:paddingHorizontal="15dp"
                        android:text="SERVICES"
                        android:onClick="addHospital"
                        android:textColor="@color/white" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_below="@+id/view"
                android:layout_marginStart="30dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/show"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="200dp"
                        android:layout_marginTop="10dp"
                        android:text="Show"
                        android:textColor="#444444"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/box1"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="75dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/shape"
                        android:paddingStart="10dp"
                        android:paddingLeft="20dp"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/entries"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="200dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="2dp"
                        android:text="entries"
                        android:textSize="20dp"
                        android:textColor="#444444"/>


                    <TextView
                        android:id="@+id/search1"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="2dp"
                        android:layout_below="@+id/show"
                        android:text="Search:"
                        android:textSize="20dp"
                        android:textColor="#444444"/>

                    <EditText
                        android:id="@+id/box2"
                        android:layout_width="230dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="90dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_below="@+id/box1"
                        android:background="@drawable/shape"
                        android:paddingStart="10dp"
                        android:paddingLeft="20dp"
                        android:textSize="20dp" />

                    <TableLayout
                        android:id="@+id/table"
                        android:layout_width="405dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="30dp"
                        android:layout_below="@+id/search1"
                        android:stretchColumns="1">

                        <TableRow android:background="@drawable/shape">


                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="20dp"
                                android:background="@drawable/divider"
                                android:text="ID"
                                android:textSize="25dp"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="20dp"
                                android:background="@drawable/divider"
                                android:text="NAME"
                                android:textColor="@color/black"
                                android:textSize="25dp" />


                        </TableRow>


                    </TableLayout>

                    <TableLayout
                        android:id="@+id/table1"
                        android:layout_width="405dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="1dp"
                        android:layout_below="@+id/table"
                        android:stretchColumns="1">

                        <TableRow android:background="#D6D6D6">


                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="20dp"
                                android:background="@drawable/divider"
                                android:text="1"
                                android:textSize="18dp"
                                android:textColor="#444444"/>

                            <TextView
                                android:id="@+id/bata"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="20dp"
                                android:background="@drawable/divider"
                                android:text="Konsulta sa Bata"
                                android:textSize="18dp"
                                android:textColor="#444444"/>


                        </TableRow>


                    </TableLayout>

                    <TableLayout
                        android:id="@+id/table2"
                        android:layout_width="405dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="1dp"
                        android:layout_below="@+id/table1"
                        android:stretchColumns="1">

                        <TableRow android:background="#FFFFFF">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="20dp"
                                android:background="@drawable/divider"
                                android:text="2"
                                android:textSize="18dp"
                                android:textColor="#444444"/>

                            <TextView
                                android:id="@+id/buntis"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:background="@drawable/divider"
                                android:padding="20dp"
                                android:text="Konsulta sa Buntis"
                                android:textSize="18dp"
                                android:textColor="#444444"/>

                        </TableRow>


                    </TableLayout>

                    <TableLayout
                        android:id="@+id/table3"
                        android:layout_width="405dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="1dp"
                        android:layout_below="@+id/table2"
                        android:stretchColumns="1">

                        <TableRow android:background="#D6D6D6">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="20dp"
                                android:background="@drawable/divider"
                                android:text="3"
                                android:textSize="18dp"
                                android:textColor="#444444"/>

                            <TextView
                                android:id="@+id/operasyon"
                                android:layout_width="100dp"
                                android:layout_height="90dp"
                                android:gravity="center"
                                android:background="@drawable/divider"
                                android:padding="20dp"
                                android:text="Konsulta para sa Operasyon"
                                android:textSize="18dp"
                                android:textColor="#444444"/>

                        </TableRow>

                    </TableLayout>

                    <TableLayout
                        android:id="@+id/table4"
                        android:layout_width="405dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="1dp"
                        android:layout_below="@+id/table3"
                        android:stretchColumns="1">

                        <TableRow android:background="#FFFFFF">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="20dp"
                                android:background="@drawable/divider"
                                android:text="4"
                                android:textSize="18dp"
                                android:textColor="#444444"/>

                            <TextView
                                android:id="@+id/medikal"
                                android:layout_width="100dp"
                                android:layout_height="90dp"
                                android:gravity="center"
                                android:padding="20dp"
                                android:background="@drawable/divider"
                                android:text="Konsultang Medikal edad 18 pataas pataas"
                                android:textSize="18dp"
                                android:textColor="#444444"/>

                        </TableRow>

                    </TableLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            ;
        </RelativeLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>